#ifndef __ADC_H
#define __ADC_H

#include "stm32f4xx_hal.h"

extern ADC_HandleTypeDef hadc1;      // ADC handle accessible from main

void ADC1_Init(void);                // Initialize ADC1
uint32_t ADC1_ReadValue(void);       // Read current ADC value (latest)
void ADC1_Start(void);               // Start continuous conversion

#endif
