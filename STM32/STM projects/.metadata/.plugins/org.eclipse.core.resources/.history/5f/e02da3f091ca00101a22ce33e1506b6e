//
//        if(!(HAL_GPIO_ReadPin(GPIOC, GPIO_PIN_13)))
//        {
//            read_SD_data();
//            HAL_Delay(300);      // debounce
//        }
    	//uint8_t ch;
    	uint8_t str[]="enter data\n";
    	uint8_t ok[]="data recieved";
