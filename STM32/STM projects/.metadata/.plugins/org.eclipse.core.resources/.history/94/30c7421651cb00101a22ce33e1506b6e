#ifndef BMI160_H_
#define BMI160_H_

#include "stm32l4xx_hal.h"   // change to your MCU family
#include <stdint.h>

#define BMI160_I2C_ADDR     0x69    // 7-bit address

typedef struct {
    float ax, ay, az;   // Accelerometer (g)
    float gx, gy, gz;   // Gyroscope (deg/sec)
} BMI160_Data;

void BMI160_Init(I2C_HandleTypeDef *hi2c);
void BMI160_Read(BMI160_Data *out);

#endif
