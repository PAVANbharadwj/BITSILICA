/* USER CODE BEGIN Header */
/**
  ******************************************************************************
  * @file           : main.c
  * @brief          : Main program body (SD logging + HCSR04)
  ******************************************************************************
  */
/* USER CODE END Header */

/* Includes ------------------------------------------------------------------*/
#include "main.h"
#include "fatfs.h"
#include <string.h>
#include <stdio.h>

/* Private variables ---------------------------------------------------------*/
SPI_HandleTypeDef hspi2;
UART_HandleTypeDef huart2;
TIM_HandleTypeDef htim1;    // TIM1 used for input capture (configured here)

/* USER CODE BEGIN PV */
/* SD Logging globals */
FIL logFile;
FRESULT fres;
UINT bw;
char line[64];

/* HCSR04 globals */
uint32_t IC_Val1 = 0;
uint32_t IC_Val2 = 0;
uint8_t Is_First_Captured = 0;  // 0 - not captured, 1 - captured first
uint16_t Distance = 0;

/* Pins (user provided) */
#define TRIG_PORT GPIOA
#define TRIG_PIN  GPIO_PIN_1

#define ECHO_PORT GPIOA
#define ECHO_PIN  GPIO_PIN_2

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_SPI2_Init(void);
static void MX_USART2_UART_Init(void);
static void MX_TIM1_Init(void);

/* USER CODE BEGIN PFP */
void SD_Log_Init(void);
void SD_Log_Distance(int distance);
uint16_t HCSR04_Read(void);
void DWT_Delay_us(uint32_t us);
/* USER CODE END PFP */

/* USER CODE BEGIN 0 */
/* Retarget printf to ITM for debugging (existing in your project) */
int _write(int file, char *ptr, int len)
{
    int i=0;
    for(i=0;i<len;i++)
        ITM_SendChar((*ptr++));
    return len;
}

/* Enable DWT CYCCNT for microsecond timing */
static void DWT_Init(void)
{
    if (!(CoreDebug->DEMCR & CoreDebug_DEMCR_TRCENA_Msk))
    {
        CoreDebug->DEMCR |= CoreDebug_DEMCR_TRCENA_Msk;
    }
    DWT->CYCCNT = 0;
    DWT->CTRL |= DWT_CTRL_CYCCNTENA_Msk;
}

/* Simple busy-wait microsecond delay using DWT cycle counter */
void DWT_Delay_us(uint32_t us)
{
    uint32_t cycles = (SystemCoreClock / 1000000UL) * us;
    uint32_t start = DWT->CYCCNT;
    while ((DWT->CYCCNT - start) < cycles) { __NOP(); }
}

/* TIM1 capture callback */
void HAL_TIM_IC_CaptureCallback(TIM_HandleTypeDef *htim)
{
    if (htim->Instance == TIM1)
    {
        if (htim->Channel == HAL_TIM_ACTIVE_CHANNEL_1)
        {
            if (Is_First_Captured == 0)
            {
                IC_Val1 = HAL_TIM_ReadCapturedValue(htim, TIM_CHANNEL_1);
                Is_First_Captured = 1;

                /* Now capture falling edge */
                __HAL_TIM_SET_CAPTUREPOLARITY(&htim1, TIM_CHANNEL_1, TIM_INPUTCHANNELPOLARITY_FALLING);
            }
            else
            {
                IC_Val2 = HAL_TIM_ReadCapturedValue(htim, TIM_CHANNEL_1);

                /* restore rising-edge capture for next measurement */
                __HAL_TIM_SET_CAPTUREPOLARITY(&htim1, TIM_CHANNEL_1, TIM_INPUTCHANNELPOLARITY_RISING);

                uint32_t diff;
                if (IC_Val2 >= IC_Val1)
                {
                    diff = IC_Val2 - IC_Val1;
                }
                else
                {
                    /* timer overflow case */
                    diff = (0xFFFF - IC_Val1) + IC_Val2 + 1;
                }

                /* diff is in microseconds if timer tick = 1 MHz */
                /* Distance in cm = (time_us * speed_of_sound_cm_per_us) / 2
                   speed_of_sound â‰ˆ 0.0343 cm/us => use float multiply */
                Distance = (uint16_t)((diff * 0.0343f) / 2.0f);

                Is_First_Captured = 0;
            }
        }
    }
}

/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  /* MCU Configuration--------------------------------------------------------*/
  HAL_Init();
  SystemClock_Config();

  MX_GPIO_Init();
  MX_SPI2_Init();
  MX_FATFS_Init();
  MX_USART2_UART_Init();
  MX_TIM1_Init();

  /* USER CODE BEGIN 2 */
  DWT_Init();

  printf("SD + HCSR04 logging example starting...\r\n");
  SD_Log_Init();

  /* USER CODE END 2 */

  /* Infinite loop */
  while (1)
  {
      int distance = HCSR04_Read();
      SD_Log_Distance(distance);
      printf("Logged: %d cm\r\n", distance);
      HAL_Delay(500);
  }
  /* USER CODE END 3 */
}

/* USER CODE BEGIN 4 */

/* Initialize SD card and open Logs.txt for append */
void SD_Log_Init(void)
{
    /* mount filesystem */
    fres = f_mount(&SDFatFS, USERPath, 1);
    if (fres != FR_OK)
    {
        printf("SD mount error : %d\r\n", fres);
        return;
    }
    printf("SD Mounted!\r\n");

    /* open or create file in append mode */
    fres = f_open(&logFile, "Logs.txt", FA_OPEN_APPEND | FA_WRITE);
    if (fres != FR_OK)
    {
        printf("Log file open error : %d\r\n", fres);
        return;
    }
    printf("Log file opened for appending.\r\n");
}

/* Append a line with the distance */
void SD_Log_Distance(int distance)
{
    int len = snprintf(line, sizeof(line), "object distance: %dcm\r\n", distance);
    if (len < 0) return;

    fres = f_write(&logFile, line, (UINT)len, &bw);
    if (fres != FR_OK)
    {
        printf("Write error : %d\r\n", fres);
        return;
    }

    f_sync(&logFile);   /* ensure data is flushed to SD */
}

/* HCSR04 reading using TIM1 input capture + DWT-based trigger pulse */
uint16_t HCSR04_Read(void)
{
    /* Reset globals */
    Distance = 0;
    Is_First_Captured = 0;
    IC_Val1 = 0;
    IC_Val2 = 0;

    /* Ensure capture polarity is rising edge for start */
    __HAL_TIM_SET_CAPTUREPOLARITY(&htim1, TIM_CHANNEL_1, TIM_INPUTCHANNELPOLARITY_RISING);

    /* Generate trigger pulse: high for 10us */
    HAL_GPIO_WritePin(TRIG_PORT, TRIG_PIN, GPIO_PIN_RESET);
    HAL_Delay(2); /* ensure stable low */
    HAL_GPIO_WritePin(TRIG_PORT, TRIG_PIN, GPIO_PIN_SET);
    DWT_Delay_us(10);  /* 10 microsecond pulse */
    HAL_GPIO_WritePin(TRIG_PORT, TRIG_PIN, GPIO_PIN_RESET);

    /* Reset timer counter to 0 for fresh measurement */
    __HAL_TIM_SET_COUNTER(&htim1, 0);

    /* Start IC interrupt (already started at init, but ensure enabled) */
    __HAL_TIM_ENABLE_IT(&htim1, TIM_IT_CC1);

    /* Wait until first capture (rising edge) or timeout */
    uint32_t tickstart = HAL_GetTick();
    while (Is_First_Captured == 0)
    {
        if ((HAL_GetTick() - tickstart) > 60)  /* 60 ms timeout */
        {
            Distance = 0;
            return Distance;
        }
    }

    /* Wait until measurement completes (Is_First_Captured will be cleared in callback) */
    tickstart = HAL_GetTick();
    while (Is_First_Captured != 0)
    {
        if ((HAL_GetTick() - tickstart) > 60)
        {
            Distance = 0;
            Is_First_Captured = 0;
            return Distance;
        }
    }

    return Distance;
}

/* USER CODE END 4 */

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /* Configure the main internal regulator output voltage */
  if (HAL_PWREx_ControlVoltageScaling(PWR_REGULATOR_VOLTAGE_SCALE1) != HAL_OK)
  {
    Error_Handler();
  }

  /* Initializes the RCC Oscillators */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_MSI;
  RCC_OscInitStruct.MSIState = RCC_MSI_ON;
  RCC_OscInitStruct.MSICalibrationValue = 0;
  RCC_OscInitStruct.MSIClockRange = RCC_MSIRANGE_6;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_MSI;
  RCC_OscInitStruct.PLL.PLLM = 1;
  RCC_OscInitStruct.PLL.PLLN = 20;
  RCC_OscInitStruct.PLL.PLLP = RCC_PLLP_DIV7;
  RCC_OscInitStruct.PLL.PLLQ = RCC_PLLQ_DIV2;
  RCC_OscInitStruct.PLL.PLLR = RCC_PLLR_DIV2;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /* Initializes the CPU, AHB and APB buses clocks */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV1;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_2) != HAL_OK)
  {
    Error_Handler();
  }
}

/* TIM1 initialization for Input Capture on Channel 1 (1 MHz timer tick -> 1us resolution) */
static void MX_TIM1_Init(void)
{
    TIM_IC_InitTypeDef sConfigIC = {0};
    TIM_MasterConfigTypeDef sMasterConfig = {0};

    /* Enable TIM1 clock */
    __HAL_RCC_TIM1_CLK_ENABLE();

    /* Basic TIM1 configuration:
       - Prescaler set so that timer clock = 1 MHz -> 1 tick = 1 us
       - Counter period = 0xFFFF
    */
    uint32_t prescaler = (SystemCoreClock / 1000000UL) - 1;

    htim1.Instance = TIM1;
    htim1.Init.Prescaler = prescaler;
    htim1.Init.CounterMode = TIM_COUNTERMODE_UP;
    htim1.Init.Period = 0xFFFF;
    htim1.Init.ClockDivision = TIM_CLOCKDIVISION_DIV1;
    htim1.Init.RepetitionCounter = 0;
    if (HAL_TIM_IC_Init(&htim1) != HAL_OK)
    {
        Error_Handler();
    }

    sConfigIC.ICPolarity = TIM_INPUTCHANNELPOLARITY_RISING;
    sConfigIC.ICSelection = TIM_ICSELECTION_DIRECTTI;
    sConfigIC.ICPrescaler = TIM_ICPSC_DIV1;
    sConfigIC.ICFilter = 0;
    if (HAL_TIM_IC_ConfigChannel(&htim1, &sConfigIC, TIM_CHANNEL_1) != HAL_OK)
    {
        Error_Handler();
    }

    sMasterConfig.MasterOutputTrigger = TIM_TRGO_RESET;
    sMasterConfig.MasterSlaveMode = TIM_MASTERSLAVEMODE_DISABLE;
    if (HAL_TIMEx_MasterConfigSynchronization(&htim1, &sMasterConfig) != HAL_OK)
    {
        Error_Handler();
    }

    /* Start input capture interrupt */
    if (HAL_TIM_IC_Start_IT(&htim1, TIM_CHANNEL_1) != HAL_OK)
    {
        Error_Handler();
    }

    /* Configure NVIC for TIM1 CC interrupt */
    HAL_NVIC_SetPriority(TIM1_CC_IRQn, 5, 0);
    HAL_NVIC_EnableIRQ(TIM1_CC_IRQn);
}

/**
  * @brief SPI2 Initialization Function
  * @retval None
  */
static void MX_SPI2_Init(void)
{
  hspi2.Instance = SPI2;
  hspi2.Init.Mode = SPI_MODE_MASTER;
  hspi2.Init.Direction = SPI_DIRECTION_2LINES;
  hspi2.Init.DataSize = SPI_DATASIZE_8BIT;
  hspi2.Init.CLKPolarity = SPI_POLARITY_LOW;
  hspi2.Init.CLKPhase = SPI_PHASE_1EDGE;
  hspi2.Init.NSS = SPI_NSS_SOFT;
  hspi2.Init.BaudRatePrescaler = SPI_BAUDRATEPRESCALER_2;
  hspi2.Init.FirstBit = SPI_FIRSTBIT_MSB;
  hspi2.Init.TIMode = SPI_TIMODE_DISABLE;
  hspi2.Init.CRCCalculation = SPI_CRCCALCULATION_DISABLE;
  hspi2.Init.CRCPolynomial = 7;
  hspi2.Init.CRCLength = SPI_CRC_LENGTH_DATASIZE;
  hspi2.Init.NSSPMode = SPI_NSS_PULSE_ENABLE;
  if (HAL_SPI_Init(&hspi2) != HAL_OK)
  {
    Error_Handler();
  }
}

/**
  * @brief USART2 Initialization Function
  * @retval None
  */
static void MX_USART2_UART_Init(void)
{
  huart2.Instance = USART2;
  huart2.Init.BaudRate = 115200;
  huart2.Init.WordLength = UART_WORDLENGTH_8B;
  huart2.Init.StopBits = UART_STOPBITS_1;
  huart2.Init.Parity = UART_PARITY_NONE;
  huart2.Init.Mode = UART_MODE_TX_RX;
  huart2.Init.HwFlowCtl = UART_HWCONTROL_NONE;
  huart2.Init.OverSampling = UART_OVERSAMPLING_16;
  huart2.Init.OneBitSampling = UART_ONE_BIT_SAMPLE_DISABLE;
  huart2.AdvancedInit.AdvFeatureInit = UART_ADVFEATURE_NO_INIT;
  if (HAL_UART_Init(&huart2) != HAL_OK)
  {
    Error_Handler();
  }
}

/* GPIO init: sets TRIG as output (PA1) and ECHO as AF for TIM1_CH1 (PA2) */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOC_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();

  /* TRIG pin as output (PA1) */
  HAL_GPIO_WritePin(TRIG_PORT, TRIG_PIN, GPIO_PIN_RESET);
  GPIO_InitStruct.Pin = TRIG_PIN;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(TRIG_PORT, &GPIO_InitStruct);

  /* ECHO pin as input capture (AF for TIM1 CH1) */
  GPIO_InitStruct.Pin = ECHO_PIN;
  GPIO_InitStruct.Mode = GPIO_MODE_AF_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  GPIO_InitStruct.Alternate = GPIO_AF1_TIM1;  /* TIM1 AF mapping */
  HAL_GPIO_Init(ECHO_PORT, &GPIO_InitStruct);
}

/**
  * @brief  This function is executed in case of error occurrence.
  */
void Error_Handler(void)
{
  __disable_irq();
  while (1)
  {
  }
}

/* Provide the TIM1 CC IRQ handler if not present elsewhere */
void TIM1_CC_IRQHandler(void)
{
    HAL_TIM_IRQHandler(&htim1);
}
